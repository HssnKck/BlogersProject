@model BlogersProject.Model.Entities.UnapprovedUser
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" />
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BilGin BloG</title>
    <link rel="icon" type="image/x-icon" href="~/startbootstrap/assets/favicon.ico" />
    <link rel="preconnect" href="~/css/loginPanel.css">
    <link rel="preconnect" href="~/css/LoginPanel.css" crossorigin>
    <link href="~/css/LoginPanel.css" rel="stylesheet">
</head>
<body>
    <form asp-controller="Login" asp-action="Register" method="post">
        <div class="login__forms">
            <label style="color:dimgray; text-decoration: none; float: right;">Lütfen Blog Yazarı Olmak İçin Aşağıdaki Bilgileri Doldurun.</label>
            <br />
            <div class="login__box">
                <ion-icon class="fs-20"></ion-icon>
                <input type="text" asp-for="UserName" placeholder="Kullanıcı Adı" autocomplete="off">
            </div> 
            <div class="login__box">
                <ion-icon class="fs-20"></ion-icon>
                <input type="text" asp-for="Name" placeholder="Blogger Adı" autocomplete="off">
            </div>
            <div class="login__box">
                <ion-icon class="fs-20"></ion-icon>
                <input type="email" asp-for="Email" placeholder="Email" autocomplete="off">
            </div>
            <div class="login__box">
                <ion-icon class="fs-20"></ion-icon>
                <input type="text" asp-for="Phone" placeholder="Telefon Numarası" autocomplete="off">
            </div>
            <div class="login__box">
                <ion-icon class="fs-20" name="lock-closed-outline"></ion-icon>
                <input type="password" asp-for="Password" placeholder="Şifreniz">
            </div>
            <div class="login__box">
                <ion-icon class="fs-20" name="lock-closed-outline"></ion-icon>
                <input type="password" asp-for="ConfirmPassword" placeholder="Tekrar Şifreniz">
            </div>
            <input type="hidden" value="Blogger"  asp-for="Role"/>
            
            <input class="btn-login" type="submit" value="Kayıt Ol" />
        </div>
    </form>
    <script type="module" src="~/css/LoginPanel.css"></script>
    <script nomodule src="~/css/LoginPanel.css"></script>
</body>
</html>