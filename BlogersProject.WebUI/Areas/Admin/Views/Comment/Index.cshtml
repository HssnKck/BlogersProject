@model IEnumerable<BlogersProject.Model.Entities.Comment>
@{
    ViewData["Title"] = "Index";
}
<div class="col-lg-12">
    <div class="card">
        <h1 style="text-align:center">Yorumlar</h1>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered verticle-middle">
                    <thead>
                        <tr>
                            <th scope="col">Kullanıcı Adı</th>
                            <th scope="col">Yorumu </th>
                            <th scope="col">Yazdığı Tarih</th>
                            <th scope="col">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Commentators</td>
                                <td>@item.Comments</td>
                                <td>@item.CommentDate</td>
                                <td>
                                    <a asp-area="Admin" asp-controller="Comment" asp-action="DeleteComment" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Sil"><i class="fa fa-close color-danger"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

