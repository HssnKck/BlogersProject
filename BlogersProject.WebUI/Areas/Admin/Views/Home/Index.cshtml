@model IEnumerable<BlogersProject.Model.Entities.Blog>
@{
    ViewData["Title"] = "Index";
}
<h1 style="text-align:center">Bloglar</h1>
<a asp-area="Admin" asp-controller="Blog" asp-action="AddBlog" class="btn btn-primary">Yeni Blog Ekle</a>


<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered verticle-middle">
                    <thead>
                        <tr>
                            <th scope="col">Başlıklar</th>
                            <th scope="col">İçerikler</th>
                            <th scope="col">Yazar</th>
                            <th scope="col">Yazıldığı Tarih</th>
                            <th scope="col">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.BlogTitle</td>
                                <td>@item.BlogPost</td>
                                <td>@item.Blogger</td>
                                <td>@item.BlogDate</td>
                                <td>
                                    <span>
                                        <a asp-area="Admin" asp-controller="Blog" asp-action="UpdateBlog" asp-route-id="@item.Id" asp data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-pencil color-muted m-r-5"></i> </a>
                                        <a asp-area="Admin" asp-controller="Blog" asp-action="DeleteBlog" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Close"><i class="fa fa-close color-danger"></i></a>
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
