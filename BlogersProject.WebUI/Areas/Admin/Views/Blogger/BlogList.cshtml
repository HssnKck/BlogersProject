@model IEnumerable<BlogersProject.Model.Entities.UnapprovedBlog>
@{
    ViewData["Title"] = "BlogList";
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h1 style="text-align:center">Onay Bekleyen Bloglar</h1>
            <div class="table-responsive">
                <table class="table table-bordered verticle-middle">
                    <thead>
                        <tr>
                            <th scope="col">Blog Başlıkları</th>
                            <th scope="col">Ön Cümle</th>
                            <th scope="col">İçerik</th>
                            <th scope="col">Yazar</th>
                            <th scope="col">Yazıldığı tarih</th>
                            <th scope="col">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.BlogTitle</td>
                                <td>@item.BlogFirst</td>
                                <td>@item.BlogPost</td>
                                <td>@item.Blogger</td>
                                <td>@item.BlogDate</td>
                                <td>
                                    <a class="btn mb-1 btn-success" asp-area="Admin" asp-controller="Blogger" asp-action="ConfirmBlog" asp-route-id="@item.Id">
                                        Onayla <span class="btn-icon-right"><i class="fa fa-check"></i></span>
                                    </a>
                                    <a class="btn mb-1 btn-danger" asp-area="Admin" asp-controller="Blogger" asp-action="RemoveUser" asp-route-id="@item.Id">
                                        Reddet <span class="btn-icon-right"><i class="fa fa-close"></i></span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
